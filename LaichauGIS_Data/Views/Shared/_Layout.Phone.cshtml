<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/bundles/MobileCSS")
    @Scripts.Render("~/bundles/MobileJS")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @{
        bool ShowBackButton = (bool)(ViewBag.ShowBackButton ?? true);
        bool ShowHomeButton = (bool)(ViewBag.ShowHomeButton ?? true);
    }
    <div data-role="page" data-theme="b">
        <div data-role="header" data-position="fixed" data-theme="b">
            <h1>@ViewBag.Title</h1>
            @if (ShowBackButton)
            {
                <a data-rel="back" data-role="button" data-transition="slide" data-direction="reverse" data-icon="back">Back</a>
            }
            @if (ShowHomeButton)
            {
                <a href="@Url.Action("Index","Home")" data-role="button" data-transition="slide" data-direction="reverse" data-icon="home">Home</a>
            }
            <div data-role="navbar" data-theme="b">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
        <div data-role="content" data-theme="d">
            @RenderBody()
        </div>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
