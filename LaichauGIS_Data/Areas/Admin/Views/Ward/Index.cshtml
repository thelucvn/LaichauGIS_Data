@model IEnumerable<Models.Framework.Ward>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách các xã</h2>

<p>
    @Html.ActionLink("Thêm xã mới", "Create") 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.District.districtName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.wardName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.latitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.longitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.area)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.population)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.wardDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.District.districtName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.wardName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.latitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.longitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.area)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.population)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.wardDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.wardID }) |
            @Html.ActionLink("Details", "Details", new { id=item.wardID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.wardID })
        </td>
    </tr>
}

</table>
