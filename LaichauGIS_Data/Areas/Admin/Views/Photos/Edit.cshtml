@model Models.Framework.Photo

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa</h2>

@using (Html.BeginForm("Edit","Photos",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Hình ảnh</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.photoID)

        <div class="form-group">
            @Html.LabelFor(model => model.photoTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.photoTitle, htmlAttributes: new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.photoTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.wardID, "Địa điểm", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("wardID", null, htmlAttributes: new { @class = "form-control",disabled=true  })
                @Html.ValidationMessageFor(model => model.wardID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.uploadBy, "Được đăng tải bởi", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("uploadBy", null, htmlAttributes: new { @class = "form-control",disabled=true })
                @Html.ValidationMessageFor(model => model.uploadBy, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.uploadDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.uploadDate, htmlAttributes: new { @class = "form-control",disabled=true  })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.photoStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.photoStatus, htmlAttributes: new { @class = "form-control",disabled=true  })
                @Html.ValidationMessageFor(model => model.photoStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.photoUrl,"Đường dẫn" ,htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.photoUrl, htmlAttributes: new { @class = "form-control",disabled=true })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
