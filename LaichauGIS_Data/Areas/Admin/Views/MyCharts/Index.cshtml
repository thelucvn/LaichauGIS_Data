        Chart.defaults.global.defaultFontColor = '#858796';
        function temperatureChart() {
            var result = @Html.Raw(ViewBag.TemperatureData);
            var dataPointsX = [];
            var dataPointsY = [];
for (var i = (result.length-1); i >=0; i--){
        strDate = result[i].x;
        var d = new Date(strDate.replace('T', ' '));
                var xlabel = d.getDate() + '/' + d.getMonth() + ' ' + d.getHours() + ':' + d.getMinutes();
        dataPointsX.push(xlabel);
        dataPointsY.push(result[i].y);
            }

  // Area Chart Example
        var ctx = document.getElementById("temperatureChart");
            var myLineChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: dataPointsX,
                datasets: [{
                    label: "Nhiệt độ (°C) ",
                    lineTension: 0.3,
                    backgroundColor: "rgba(78, 115, 223, 0.05)",
                    borderColor: "rgba(78, 115, 223, 1)",
                    pointRadius: 3,
                    pointBackgroundColor: "rgba(255, 128, 0, 1)",
                    pointBorderColor: "rgba(255, 128, 0, 1)",
                    pointHoverRadius: 3,
                    pointHoverBackgroundColor: "rgba(78, 115, 223, 1)",
